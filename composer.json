{
  "name": "causal/staffdirectory",
  "type": "typo3-cms-extension",
  "description": "Directory of groups of persons and their department membership with RDFa support",
  "keywords": [
    "TYPO3 CMS"
  ],
  "homepage": "https://github.com/xperseguers/staffdirectory.git",
  "support": {
    "issues": "https://github.com/xperseguers/staffdirectory/issues",
    "source": "https://github.com/xperseguers/staffdirectory"
  },
  "authors": [
    {
      "name": "Xavier Perseguers",
      "email": "xavier@causal.ch",
      "homepage": "https://www.causal.ch",
      "role": "Developer"
    }
  ],
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=8.1.0 <=8.5.99",
    "typo3/cms-core": "^11 || ^12 || ^13 || 14.*.*@dev",
    "sjbr/static-info-tables": "^11.5 || ^12.4 || ^13.4",
    "giggsey/libphonenumber-for-php": "^9.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "~3.89.2",
    "phpstan/phpstan": "2.1.32",
    "rector/rector": "2.2.7"
  },
  "autoload": {
    "psr-4": {
      "Causal\\Staffdirectory\\": "Classes/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-main": "2.1.x-dev",
      "dev-features/TYPO3v14": "2.2.x-dev"
    },
    "typo3/cms": {
      "extension-key": "staffdirectory"
    }
  },
  "scripts": {
    "all": [
      "@cs",
      "@stan",
      "@rector-check"
    ],
    "cs": [
      "./vendor/bin/php-cs-fixer fix -v --dry-run --config .php-cs-fixer.php"
    ],
    "csfix": [
      "./vendor/bin/php-cs-fixer fix -v --config .php-cs-fixer.php"
    ],
    "rector": [
      "./vendor/bin/rector"
    ],
    "rector-check": [
      "./vendor/bin/rector --dry-run"
    ],
    "stan": [
      "./vendor/bin/phpstan"
    ]
  },
  "config": {
    "allow-plugins": {
      "typo3/cms-composer-installers": true,
      "typo3/class-alias-loader": true
    }
  }
}
